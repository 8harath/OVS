# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///voting_system.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Security Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day;50 per hour

# Email Configuration (for notifications and password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@votingsystem.com

# SMS Configuration (optional - for Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Admin Configuration
ADMIN_EMAIL=admin@votingsystem.com
ADMIN_PASSWORD=change-this-password

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=True
REQUIRE_LOWERCASE=True
REQUIRE_DIGITS=True
REQUIRE_SPECIAL_CHARS=True

# Election Settings
ELECTION_START_DATE=2024-01-01
ELECTION_END_DATE=2024-12-31
ENABLE_LIVE_RESULTS=False

# Blockchain Configuration (Phase 1)
# Set to True to enable blockchain recording of votes
BLOCKCHAIN_ENABLED=False

# Network: mumbai (testnet) or polygon (mainnet)
BLOCKCHAIN_NETWORK=mumbai

# RPC URLs (Get from Alchemy, Infura, or QuickNode)
# Mumbai testnet: https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY
MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Private key of admin wallet (with testnet MATIC)
# Get testnet MATIC from: https://faucet.polygon.technology/
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Smart Contract Addresses (set after deployment)
VOTE_REGISTRY_ADDRESS=
ELECTION_MANAGER_ADDRESS=
VOTER_REGISTRY_ADDRESS=

# Blockchain Behavior
BLOCKCHAIN_ASYNC=False
BLOCKCHAIN_FAIL_GRACEFULLY=True
BLOCKCHAIN_BATCH_SIZE=50
